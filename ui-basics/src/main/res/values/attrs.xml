<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="UITextViewBase">
    <attr name="text" format="string"/>
    <attr name="textWidth" format="dimension"/>
    <attr name="textAllCaps" format="reference|boolean"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="textPadding" format="dimension"/>
    <attr name="textStyle" format="reference"/>
    <attr name="textGravity" format="integer">
      <flag name="bottom" value="80" />
      <flag name="center" value="17" />
      <flag name="center_horizontal" value="1" />
      <flag name="center_vertical" value="16" />
      <flag name="clip_horizontal" value="8" />
      <flag name="clip_vertical" value="128" />
      <flag name="end" value="8388613" />
      <flag name="fill" value="119" />
      <flag name="fill_horizontal" value="7" />
      <flag name="fill_vertical" value="112" />
      <flag name="left" value="3" />
      <flag name="right" value="5" />
      <flag name="start" value="8388611" />
      <flag name="top" value="48" />
    </attr>
    <attr name="textLines" format="integer"/>
    <attr name="textMaxLines" format="integer"/>

    <attr name="icon" format="reference"/>
    <attr name="iconPadding" format="dimension"/>
    <attr name="iconSize" format="dimension"/>
    <attr name="iconTint" format="color"/>
    <attr name="iconTextGap" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="UIContentView">
    <attr name="title" format="string"/>
    <attr name="titleAllCaps" format="reference|boolean"/>
    <attr name="titleColor" format="color"/>
    <attr name="titleSize" format="dimension"/>
    <attr name="titlePadding" format="dimension"/>
    <attr name="titleStyle" format="reference"/>
    <attr name="titleMaxLines" format="integer"/>

    <attr name="subtitle" format="string"/>
    <attr name="subtitleAllCaps" format="reference|boolean"/>
    <attr name="subtitleColor" format="color"/>
    <attr name="subtitleSize" format="dimension"/>
    <attr name="subtitlePadding" format="dimension"/>
    <attr name="subtitleStyle" format="reference"/>
    <attr name="subtitleMaxLines" format="integer"/>
  </declare-styleable>

  <declare-styleable name="UIActionView">
    <attr name="action" format="reference"/>
    <attr name="actionPadding" format="dimension"/>
    <attr name="actionSize" format="dimension"/>
    <attr name="actionTint" format="color"/>
    <attr name="actionTextGap" format="dimension"/>
  </declare-styleable>
</resources>