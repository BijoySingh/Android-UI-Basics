<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Headline">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:textColor">@color/dark_tertiary_text</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CustomFigTextView">
  </style>

  <style name="CustomFigLabelView">
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>

  <style name="CustomFigContentViewTitle">
    <item name="android:textColor">@color/dark_secondary_text</item>
  </style>

  <style name="CustomFigContentViewSubtitle">
    <item name="android:textColor">@color/dark_tertiary_text</item>
  </style>

</resources>
